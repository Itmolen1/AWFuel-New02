
@{
                /**/

                ViewBag.Title = "Vehicle Create";
                Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<label></label>*@
<main id="js-page-content" role="main" class="page-content">

    <div class="subheader">
        <h1 class="subheader-title">
            <i class='subheader-icon fal fa-edit'></i> Create Vehicle
        </h1>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Vehicle <span class="fw-300"></span>
                    </h2>

                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="panel-tag">
                            Please add your vehicle from here...
                        </div>
                        <form action="/Vehicle/Create" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">


                                    <div class="form-group">
                                        <label class="form-label" for="single-label">
                                            Select Vehicle Type
                                        </label>
                                        
                                         <select class="select2 form-control" name="VehicleType" id="VehicleType">
                                          @foreach (var item in ViewBag.VehicleTypes)
                                          {
                                                <option value="@item.Id">@item.VehicleType</option>
                                          }
                                         </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Trafic Plate Number</label>
                                        <input type="text" id="TraficPlateNumber" name="TraficPlateNumber" class="form-control" placeholder="Trafic Plate Number">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Tc Number</label>
                                        <input type="text" id="TCNumber" name="TCNumber" class="form-control" placeholder="Enter Tc Number">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Model</label>
                                        <input type="text" id="Model" name="Model" class="form-control" placeholder="Enter Model">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Brand</label>
                                        <input type="text" id="Brand" name="Brand" class="form-control" placeholder="Enter Brand">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Color</label>
                                        <input type="text" id="Color" name="Color" class="form-control" placeholder="Enter Color">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Mulkia Expiry</label>
                                        <input type="date" id="MulkiaExpiry" name="MulkiaExpiry" class="form-control" placeholder="Enter Mulkia Expiry">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Insurance Expiry</label>
                                        <input type="date" id="InsuranceExpiry" name="InsuranceExpiry" class="form-control" placeholder="Enter Insurance Expiry">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Region</label>
                                        <input type="text" id="RegisteredRegion" name="RegisteredRegion" class="form-control" placeholder="Enter Region">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Notes</label>
                                        <textarea name="Comments" id="Comments" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label" style="margin-top:20px"><b>Upload Mulkia 1</b> Front side</label>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class=newbtn>
                                                        <img id="MulkiaFront1Preview" class="blah" src="/assets/staticImages/icon1.png">
                                                        <input id="MulkiaFront1File" name="MulkiaFront1File" class='pic' onchange="readURL(this);" type="file">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label" style="margin-top:20px"><b>Upload Mulkia 1</b> back side</label>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class=newbtn>
                                                        <img id="MulkiaBack1Preview" class="blah" src="/assets/staticImages/icon1.png">
                                                        <input id="MulkiaBack1File" name="MulkiaBack1File" class='pic' onchange="readURL(this);" type="file">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label" style="margin-top:20px"><b>Upload Mulkia 2</b> Front side</label>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class=newbtn>
                                                        <img id="MulkiaFront2Preview" class="blah" src="/assets/staticImages/icon1.png">
                                                        <input id="MulkiaFront2File" name="MulkiaFront2File" class='pic' onchange="readURL(this);" type="file">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label class="form-label" style="margin-top:20px"><b>Upload Mulkia 2</b> back side</label>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class=newbtn>
                                                        <img id="MulkiaBack2Preview" class="blah" src="/assets/staticImages/icon1.png">
                                                        <input id="MulkiaBack2File" name="MulkiaBack2File" class='pic' onchange="readURL(this);" type="file">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row py-5">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                                Submit
                                                <span>Vehicle</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



