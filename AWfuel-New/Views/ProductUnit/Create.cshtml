@model IT.Core.ViewModels.ProductUnitViewModel

@{
    ViewBag.Title = "Prduct Unit Create";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
@*<label></label>*@
<main id="js-page-content" role="main" class="page-content">

    <div class="subheader">
        <h1 class="subheader-title">
            <i class='subheader-icon fal fa-edit'></i> Create Product Unit
        </h1>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Product Unit <span class="fw-300"></span>
                    </h2>

                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="panel-tag">
                            Please add Product Unit from here...
                        </div>
                        <form action="/ProductUnit/Create" method="post">
                            <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Unit Name</label>
                                        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" placeholder="Product Unit Name">
                                    </div>
                                </div>
                            </div>
                            <div class="row py-5">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                        Submit
                                        <span>Product Unit</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

