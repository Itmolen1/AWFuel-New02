@model IT.Core.ViewModels.CityViewModel
@{
    ViewBag.Title = "Add Update City";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";


    List<IT.Core.ViewModels.StateViewModel> stateViewModels = new List<IT.Core.ViewModels.StateViewModel>();
    stateViewModels = ViewBag.States as List<IT.Core.ViewModels.StateViewModel>;
}

<main id="js-page-content" role="main" class="page-content">

    <div class="subheader">
        <h1 class="subheader-title">
            <i class='subheader-icon fal fa-edit'></i> Create City
        </h1>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        State <span class="fw-300"></span>
                    </h2>

                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="panel-tag">
                            Please add City from here...
                        </div>
                        <form action="/Country/AddUpdateCity" method="post">


                            <div class="row">
                                <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                                <div class="col-md-12">
                                    <div class="form-group mb-2">
                                        <label class="form-label" for="simpleinput">States</label>
                                        <select id="StateId" name="StateId" class="select3 StateId" required>
                                            @foreach (var item in stateViewModels)
                                            {

                                                <option value="@item.Id" @(Model.StateId == item.Id ? "selected='selected'" : "")>@item.States</option>

                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">City Name</label>
                                        <input type="text" id="CityName" value="@Model.CityName" name="CityName" class="form-control" placeholder="City Name">
                                    </div>
                                </div>

                            </div>

                            <div class="row py-5">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                        Submit
                                        <span>City</span>
                                    </button>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


