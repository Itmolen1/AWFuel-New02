@model List<IT.Core.ViewModels.SiteViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

    List<IT.Core.ViewModels.SiteViewModel> siteViewModels = new List<IT.Core.ViewModels.SiteViewModel>();
    siteViewModels = Model as List<IT.Core.ViewModels.SiteViewModel>;

}
@*<label>hel</label>*@
 <ol class="breadcrumb page-breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Aw Fuel</a></li>  
                            <li class="breadcrumb-item active">Drivers</li>
                            <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
 </ol>                 
                       <div class="row">
                            <div class="col-xl-12">
                                <div id="panel-1" class="panel">
                                    <div class="panel-hdr">
                                        <h2>
                                           <a href="/Site/Create"> <i class="fal fa-plus-circle"></i>  Add New <span class="fw-300"><i>Site</i></span>
                                           </a>
                                        </h2>
                                    </div>
                                    <div class="panel-container show">
                                        <div class="panel-content">
                                    <!--      <div class="panel-tag">
                                                <p>Drivers Base Information</p> 
                                            </div>-->  
                                            <!-- datatable start -->
                                            <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                                                <thead class="bg-primary-600">
                                                    <tr>
                                                        <th>Site Name</th>
                                                        <th>Contact person</th>
                                                        <th>Contact person Mobile</th>
                                                        <th>Address</th>
                                                        <th>Created date</th>
                                                        <th>IsActive</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>                                                    
                                                    @foreach (var item in siteViewModels)
                                                    {
                                                        <tr>
                                                            <td>@item.SiteName</td>
                                                           <td>@item.ContactPersonName</td>
                                                            <td>@item.ContactPhone</td>
                                                            <td>@item.Address</td>
                                                            <td>@item.CreatedDates</td>
                                                            <td>@item.IsActive</td>
                                                            
                                                          <td>
                                                               <a href="/Site/Details/@item.Id"><i class="fal fa-eye"></i> </a> &nbsp; &nbsp;
                                                                <a href="/Site/Edit/@item.Id"><i class="fal fa-edit"></i></a>&nbsp; &nbsp;
                                                                <i class="fal fa-trash-alt"> 
                                                            </td>
                                                        </tr>
                                                    }                                                       
                                                </tbody>
                                            </table>
                                            <!-- datatable end -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

